{
  "name": "express-with-typescript-and-graphql",
  "version": "1.0.0",
  "description": "setting up an express project with typescript and graphql",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node-dev --respawn src/index.ts",
    "format:check": "prettier --ignore-path .gitignore \"./src/**/*.{ts}\" --check",
    "format:fix": "prettier --ignore-path .gitignore  \"./src/**/*.{ts}\" --write",
    "type:check": "tsc --noEmit",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aynaitlamine/express-with-typescript-and-graphql.git"
  },
  "author": "ayoub nait lamine",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aynaitlamine/express-with-typescript-and-graphql/issues"
  },
  "homepage": "https://github.com/aynaitlamine/express-with-typescript-and-graphql#readme",
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^6.6.9",
    "@types/jest": "^28.1.6",
    "@types/uuid": "^8.3.4",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.5.1",
    "apollo-server-express": "^3.10.0",
    "express": "^4.18.1",
    "graphql": "^15.8.0",
    "graphql-middleware": "^6.1.32",
    "graphql-tools": "^8.3.1",
    "uuid": "^8.3.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
